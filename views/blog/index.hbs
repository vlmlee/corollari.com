<div class="content">
    <h1>Blog Posts</h1>
    <div class="inner-content">
        {{#list 0 posts.length posts}}
            <div class="blog-index-item">
                <a href="/blog/{{this.slug}}">
                    <h2 class="blog-item"> 
					<div>
						<img src="/images/icons/right-arrow.svg" class="blog-icon" /> <span class="animateHover">{{this.title}}</span>
					</div>
				    </h2>
                </a>
                <p>{{this.createdAt}}</p>
                <br>
            </div>
        {{/list}}
    </div>
</div>
