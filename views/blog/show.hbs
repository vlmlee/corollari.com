<div class="content">
    <h1>Blog Posts</h1>

    <div class="inner-content">
        <div class="blog-post">
            {{#each post}}
                <h2 class="blog-title">{{this.title}}</h2>
                <p class="blog-date">By Michael Lee &nbsp; | &nbsp {{this.createdAt}}</p>
                <div class="blog-body">{{{this.body}}}</div>

                <div id="disqus_thread"></div>
                <script>
                /**
                 *  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
                 *  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables */

                var disqus_config = function() {
                    this.page.url = 'http://www.corollari.com/blog/{{this.slug}}'; // Replace PAGE_URL with your page's canonical URL variable
                    this.page.identifier = 'http://www.corollari.com/blog/{{this.slug}}'; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
                };

                (function() { // DON'T EDIT BELOW THIS LINE
                    var d = document,
                        s = d.createElement('script');
                    s.src = '//www-corollari-com.disqus.com/embed.js';
                    s.setAttribute('data-timestamp', +new Date());
                    (d.head || d.body).appendChild(s);
                })();
                </script>
                {{else}}
                    <h2> There seems to be nothing here... </h2>
            {{/each}}
        </div>
    </div>
    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
</div>
